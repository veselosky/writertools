{
  "HTML": {
    "beautifiers": [
      "Pretty Diff",
      "JS-Beautify"
    ],
    "indent_size": 2,
    "indent_style": "space",
    "max_preserve_newlines": 0,
    "quotes": "double",
    "wrap_line_length": 88,
    "end_with_newline": true,
    "wrap_attributes": "auto"
  },
  "Twig": {
    "beautifiers": [
      "Pretty Diff"
    ],
    "indent_size": 2,
    "indent_style": "space",
    "max_preserve_newlines": 0,
    "quotes": "double",
    "wrap_line_length": 88,
    "align_assignments": false,
    "break_chained_methods": false,
    "end_with_comma": true,
    "multiline_ternary": "never"
  }
}